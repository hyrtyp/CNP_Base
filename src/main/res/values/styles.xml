<resources>

    <!-- 全局actionbar标题样式设置 -->
    <style name="Widget.Edu.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <!-- 11版本以下的actionbar样式 -->
    <style name="Widget.Edu.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/Widget.Edu.ActionBar.Title</item>
    </style>

    <!-- Tab选项标签的样式 -->
    <style name="MyActionBarTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@color/actionbar_bg</item>

    </style>

    <!-- Tab选项标签字体的样式 -->
    <style name="MyActionBarTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <style name="layout_actionbar_title_text">
        <item name="android:textColor">@color/actionbar_title_text</item>
        <item name="android:textSize">@dimen/layout_actionbar_title_text_size</item>
    </style>
    <style name="layout_actionbar_title_back">
        <item name="android:layout_marginLeft">@dimen/layout_actionbar_title_back_marginLeft</item>
    </style>

    <style name="cnp_school_layout">
        <item name="android:layout_marginLeft">@dimen/cnp_school_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/cnp_school_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/cnp_school_layout_margin</item>
    </style>

</resources>
